{
  "compilerOptions": {
   "target": "ES2017", 
   "module": "commonjs",
   "allowJs": true,
   "jsx": "preserve",
   "outDir": "./dist",
   "resolveJsonModule": true,
   "strict": true,
   "baseUrl": "./",
   "paths": {
      "@lib/*": ["./lib/*"]
    }, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "__test__"]
}
