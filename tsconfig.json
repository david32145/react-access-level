{
  "compilerOptions": {
   "target": "ES2017", 
   "module": "commonjs",
   "allowJs": true,
   "jsx": "preserve",
   "rootDir": "./lib",
   "outDir": "./dist",
   "resolveJsonModule": true,
   "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["lib", "__test__"]
}
